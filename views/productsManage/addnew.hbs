<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Add Product</title>
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Roboto:400,700"
    />
    <!-- https://fonts.google.com/specimen/Roboto -->
    <link rel="stylesheet" href="css/fontawesome.min.css" />
    <!-- https://fontawesome.com/ -->
    <link rel="stylesheet" href="css/jquery-ui.min.css" type="text/css" />
    <!-- http://api.jqueryui.com/datepicker/ -->
    <link rel="stylesheet" href="css/bootstrap2.min.css" />
    <!-- https://getbootstrap.com/ -->
    <link rel="stylesheet" href="css/templatemo-style.css">
    
  </head>

  <body>
    <nav class="navbar navbar-expand-xl">
      
    </nav>
    <div class="container tm-mt-big tm-mb-big">
      <div class="row">
        <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
          <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
            <div class="row">
              <div class="col-12">
                <h2 class="tm-block-title d-inline-block">Thêm sản phẩm mới</h2>
              </div>
            </div>
            <div class="row tm-edit-product-row">
              <div class="col-xl-6 col-lg-6 col-md-12">
                <form action="" class="tm-edit-product-form" action="/addnew" method="post">
                  <div class="form-group mb-3">
                    <label for="name">Tên sản phẩm</label>
                    <input id="txtName" name="txtName" type="text" class="form-control validate" value="{{oldValues.name}}">
                    <span style="color: red;">{{errors}}</span> 
                  </div>
                  <div class="form-group mb-3">
                    <label for="type">Loại sản phẩm:</label>
                    <input id="txtType" name="txtType" type="text" class="form-control validate" value="{{oldValues.type}}">
                  </div>

                  <div class="form-group mb-3">
                    <label for="type">Decription:</label>
                    <input id="txtDecription" name="txtDecription" type="text" class="form-control validate" value="{{oldValues.Decription}}">
                  </div>
                  
                  <div class="row">
                      <div class="form-group mb-3 col-xs-12 col-sm-6">
                          <label for="price">Giá (VND)</label>
                          <input id="txtPrice" name="txtPrice" type="text" class="form-control validate" value="{{oldValues.price}}">
                          <span style="color: red;">{{error}}</span> 
                        </div>
                        <div class="form-group mb-3 col-xs-12 col-sm-6">
                          <label for="image">Link ảnh URL</label>
                          <input id="txtPicURL" name="txtPicURL" type="text" class="form-control validate" value="{{oldValues.picURL}}">
                        </div>
                  </div>
                  
              </div>

              <div class="col-12">
                <button type="submit" value="Insert" class="btn btn-primary btn-block text-uppercase">Add Product Now</button>
              </div>
              </div>
            </form>
            </div>
          </div>
        </div>
      </div>
    </div>
   

    <script src="js/jquery-3.3.1.min.js"></script>
    <!-- https://jquery.com/download/ -->
    <script src="jquery-ui-datepicker/jquery-ui.min.js"></script>
    <!-- https://jqueryui.com/download/ -->
    <script src="js/bootstrap.min.js"></script>
    <!-- https://getbootstrap.com/ -->
    <script>
      $(function() {
        $("#expire_date").datepicker();
      });
    </script>
  </body>
</html>
